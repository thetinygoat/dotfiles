include ~/.nano/*.nanorc

# === VISUAL IMPROVEMENTS ===
set linenumbers
set numbercolor brightblack,normal
set titlecolor brightwhite,blue
set statuscolor brightwhite,green
set errorcolor brightwhite,red
set selectedcolor brightwhite,magenta

# Show current position info
set constantshow

# === EDITING BEHAVIOR ===
set tabsize 4
set tabstospaces         # Convert tabs to spaces
set autoindent
set smarthome
set softwrap
set atblanks             # Wrap at word boundaries, not mid-word

# === SEARCH & REPLACE ===
set casesensitive
set regexp               # Enable regex in search by default

# === BRACKET & QUOTE MATCHING ===
set matchbrackets "(<[{)>]}"
set brackets ""')>]}"    # Additional bracket chars for navigation

# === MOUSE & INTERACTION ===
set mouse
set quickblank           # Clear status messages quickly

# === BACKUP & SAFETY ===
set backup               # Create backup files
set backupdir "~/.nano/backups"  # Store backups in dedicated folder
set historylog           # Save search/replace history
set positionlog          # Remember cursor position in files

# === PERFORMANCE ===
set locking              # Lock files being edited
set multibuffer          # Allow multiple file buffers

# === WHITESPACE HANDLING ===
set trimblanks           # Trim trailing whitespace on save
set whitespace "»·"      # Show tabs (») and trailing spaces (·)

# === CONVENIENT KEYBINDINGS ===
# Ctrl+S to save (more intuitive than Ctrl+O)
bind ^S writeout main
# Ctrl+Q to quit
bind ^Q exit main
# Ctrl+F to search
bind ^F whereis main
# Ctrl+H for find & replace
bind ^H replace main
# Alt+U for undo, Alt+R for redo
bind M-U undo main
bind M-R redo main
